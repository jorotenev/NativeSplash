            <ListView row="0"
                      id="photos-list"
                      items="{{ photos }}"
                      loadMoreItems="onLoadMoreItems"
                      itemTap="onTap"
            >

                <ListView.itemTemplate>

                    <StackLayout>

                        <GridLayout rows="*,auto,auto" class="photos-list-item">
                            <Image row="0"
                                   class="photo"
                                   src="{{urls.raw | imageLink}}"
                                   stretch="none"
                                   width="{{$parents['ListView'].imageWidth, $parents['ListView'].imageWidth + 'px' }}"
                                   height="{{$parents['ListView'].imageHeight, $parents['ListView'].imageHeight + 'px' }}"
                            />

                            <DockLayout row="1" class="railway photo-metadata" stretchLastChild="false">
                                <Label dock="left" text='{{authorName}}' class="author-name"/>
                                <Label dock="right" text='{{likes}}' class="number-likes"/>
                            </DockLayout>

                            <StackLayout class="hr-light" row="2"/>
                        </GridLayout>
                    </StackLayout>
                </ListView.itemTemplate>
            </ListView>
        </GridLayout>
    </StackLayout>

</Page>